{
	"name": "Pigment to Azure Data Lake Storage",
	"properties": {
		"activities": [
			{
				"name": "GetPigmentAPIKey",
				"description": "Calls Azure Key Vault to grab the stored Pigment Export API key.",
				"type": "WebActivity",
				"dependsOn": [],
				"policy": {
					"timeout": "0.12:00:00",
					"retry": 0,
					"retryIntervalInSeconds": 30,
					"secureOutput": false,
					"secureInput": true
				},
				"userProperties": [],
				"typeProperties": {
					"url": {
						"value": "@concat(pipeline().parameters.SecretIdentifierURL,'?api-version=7.0')",
						"type": "Expression"
					},
					"connectVia": {
						"referenceName": "AutoResolveIntegrationRuntime",
						"type": "IntegrationRuntimeReference"
					},
					"method": "GET",
					"authentication": {
						"type": "MSI",
						"resource": "https://vault.azure.net"
					}
				}
			},
			{
				"name": "SetExportAPIKey",
				"description": "Takes the value from GetPigmentAPIKey and puts into a variable to be used in the next copy data action,",
				"type": "SetVariable",
				"dependsOn": [
					{
						"activity": "GetPigmentAPIKey",
						"dependencyConditions": [
							"Succeeded"
						]
					}
				],
				"policy": {
					"secureOutput": true,
					"secureInput": true
				},
				"userProperties": [],
				"typeProperties": {
					"variableName": "PigmentExportKey",
					"value": {
						"value": "@activity('GetPigmentAPIKey').output.value",
						"type": "Expression"
					}
				}
			},
			{
				"name": "LoadCSVToBlobStorage",
				"description": "Calls Pigment's API to grab a View's export as CSV. Stores that CSV in the specified Blob Storage bucket.",
				"type": "Copy",
				"dependsOn": [
					{
						"activity": "SetExportAPIKey",
						"dependencyConditions": [
							"Succeeded"
						]
					}
				],
				"policy": {
					"timeout": "0.12:00:00",
					"retry": 0,
					"retryIntervalInSeconds": 30,
					"secureOutput": false,
					"secureInput": true
				},
				"userProperties": [],
				"typeProperties": {
					"source": {
						"type": "DelimitedTextSource",
						"storeSettings": {
							"type": "HttpReadSettings",
							"requestMethod": "GET",
							"additionalHeaders": {
								"value": "@{concat('Authorization: Bearer ',variables('PigmentExportKey'))}",
								"type": "Expression"
							},
							"requestTimeout": ""
						},
						"formatSettings": {
							"type": "DelimitedTextReadSettings"
						}
					},
					"sink": {
						"type": "DelimitedTextSink",
						"storeSettings": {
							"type": "AzureBlobFSWriteSettings"
						},
						"formatSettings": {
							"type": "DelimitedTextWriteSettings",
							"quoteAllText": true,
							"fileExtension": ".txt"
						}
					},
					"enableStaging": false,
					"translator": {
						"type": "TabularTranslator",
						"typeConversion": true,
						"typeConversionSettings": {
							"allowDataTruncation": true,
							"treatBooleanAsNumber": false
						}
					}
				},
				"inputs": [
					{
						"referenceName": "PigmentExport",
						"type": "DatasetReference",
						"parameters": {
							"list_view_id": {
								"value": "@pipeline().parameters.PigmentViewId",
								"type": "Expression"
							}
						}
					}
				],
				"outputs": [
					{
						"referenceName": "CSVBlobStore",
						"type": "DatasetReference"
					}
				]
			}
		],
		"parameters": {
			"SecretIdentifierURL": {
				"type": "String"
			},
			"PigmentViewId": {
				"type": "string"
			}
		},
		"variables": {
			"PigmentExportKey": {
				"type": "String"
			}
		},
		"annotations": []
	}
}